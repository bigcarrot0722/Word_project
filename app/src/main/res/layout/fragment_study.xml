<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:background="@color/main_blue"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/imagView"
            android:layout_width="113dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_book" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imagView"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/study_background"
        android:rowCount="2"
        android:padding="10dp"
        android:columnCount="1">

        <androidx.cardview.widget.CardView
            android:id="@+id/studyFirstCardView"
            app:cardCornerRadius="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="80dp"
                    android:src="@drawable/logo_alertdialog"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Study"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/studySecondCardView"
            app:cardCornerRadius="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="80dp"
                    android:src="@drawable/logo_alertdialog"
                    android:layout_height="80dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Study"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>




</LinearLayout>


